{
    "name": "quiz_server",
    "version": "1.0.0",
    "description": "",
    "main": "dist/src/server.js",
    "scripts": {
        "build": "npx tsc && pm2 update",
        "start": "npm run prod",
        "prod": "npx tsc && pm2 start ./dist/src/server.js --ignore-watch=node_modules && pm2 save",
        "dev": "nodemon",
        "test": "jest --testPathPattern unit",
        "db:seed:all": "npx sequelize-cli db:seed:all",
        "db:seed:del": "npx sequelize-cli db:seed:undo:all",
        "db:migrate:del": "npx sequelize-cli db:migrate:undo:all",
        "db:migrate": "npx sequelize-cli db:migrate"
    },
    "jest": {
        "preset": "ts-jest"
    },
    "author": "Alexandr Pupyshev",
    "license": "ISC",
    "devDependencies": {
        "@types/bcrypt": "^5.0.2",
        "@types/cors": "^2.8.14",
        "@types/express": "^4.17.17",
        "@types/jest": "^29.5.12",
        "@types/jsonwebtoken": "^9.0.3",
        "@types/node": "^20.4.5",
        "@types/nodemailer": "^6.4.17",
        "@types/sequelize": "^4.28.20",
        "@types/supertest": "^2.0.12",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "jest": "^29.7.0",
        "nodemon": "^3.0.1",
        "sequelize-cli": "^6.6.2",
        "ts-jest": "^29.1.4",
        "typescript": "^5.1.6"
    },
    "dependencies": {
        "awilix": "^8.0.1",
        "awilix-express": "^8.0.0",
        "bcrypt": "^5.1.1",
        "cors": "^2.8.5",
        "helmet": "^7.0.0",
        "joi": "^17.10.1",
        "jsonwebtoken": "^9.0.2",
        "mysql2": "^3.11.5",
        "nodemailer": "^6.9.16",
        "pm2": "^5.3.0",
        "reflect-metadata": "^0.1.13",
        "sequelize": "^6.37.5",
        "sequelize-auto": "^0.8.8",
        "ts-node": "^10.9.1"
    }
